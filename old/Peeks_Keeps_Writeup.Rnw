require("circlize")
sm.select.fun <- function(trial = 10, expectations = c(2, 1), total.trials = 100, c = 1, kink = NA) {

  if(is.na(kink)) {kink <- total.trials * .5}
  
  output <- exp((trial / kink) ^ c * expectations) / sum(exp((trial / kink) ^ c * expectations))
  
return(output)

}


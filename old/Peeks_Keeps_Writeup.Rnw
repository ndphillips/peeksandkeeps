kg.fit.fun <- function(selection = sample(1:2, 100, replace = T), 
                       action = sample(0:1, 100, replace = T), 
                       outcome = rnorm(100), 
                       n.options = 2,
                       selection.method = "sm",
                       action.method = "pneg"
